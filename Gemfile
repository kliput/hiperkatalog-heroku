source 'https://rubygems.org'

gem 'rails', '3.2.8'

gem 'sqlite3'
gem 'json'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails', '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  # See https://github.com/sstephenson/execjs#readme for more supported runtimes
  gem 'therubyracer', :platform => [:mri, :ruby]
  gem 'therubyrhino', :platform => :jruby

  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

# To use Jbuilder templates for JSON
gem 'jbuilder'

group :development do
  gem 'faster_require', '0.9.2', :platforms => [:mswin, :mingw]
# Unpack it somewhere, like lib
# $ cd my_rails_app/lib
# $ gem unpack faster_require
# Now add this line to your config/environment.rb:
# require File.dirname(__FILE__) + "/../lib/faster_require-0.9.2/lib/faster_require"
# faster speeds all around...make sure to update it to whatever version number you fetched though.
# To use debugger
  gem 'ruby-debug', :platforms => :ruby_18
  gem 'ruby-debug19', :platforms => :ruby_19 # can not install linecache19
  gem 'rails-erd'
# metrics tools
  gem 'metrical'
  gem 'fattr'
  gem 'arrayfields'
  gem 'map'
  gem 'ripper', :platforms => :ruby_18
# add db rdoc before model classes
  gem 'annotate'
end

gem 'haml'
gem 'sass'
gem 'polish', '>= 0.1.0'
gem 'settingslogic'
